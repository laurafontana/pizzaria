<p id="notice"><%= notice %></p>

<h1><marquee behavior="alternate" direction="right">Pizzaria das Tartarugas NinJas</marquee></h1>
<hr>
<img src="/assets/turtle.jpg" width="250">
<hr>
<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Preco</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pizzas.each do |pizza| %>
      <tr>
        <td><%= pizza.name %></td>
        <td><%= pizza.price %></td>
        <td><%= link_to 'Mostrar', pizza %></td>
        <td><%= link_to 'Editar', edit_pizza_path(pizza) %></td>
        <td><%= link_to 'Excluir', pizza, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>

<%= link_to 'Nova Pizza', new_pizza_path %>
